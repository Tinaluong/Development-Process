<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.seclass.tccart">

    <application
        android:name=".TCCart_System"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainScreen"
            android:label="TCCart"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Order"
            android:label="@string/title_activity_order"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddCustomer"
            android:label="Add Customer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ManagerMenu"
            android:label="Manager Menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditCustomerInformation"
            android:label="@string/title_activity_edit_customer_information"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ExistingCustomer"
            android:label="@string/title_activity_existing_customer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TransactionHistory"
            android:label="@string/title_activity_transaction_history"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
